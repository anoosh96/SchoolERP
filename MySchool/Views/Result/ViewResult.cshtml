                        <th>Name</th>
                        <th>Subject</th>
                        <th>Total Marks</th>
                        <th>Obtained Marks</th>
                        <th>Type</th>
                        <th>Percentage(%)</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Student.StudentID)</td>


                            <td>@Html.DisplayFor(modelItem => item.Student.FirstName)</td>


