                            <td>@Html.DisplayFor(modelItem => item.MarksObtained)</td>


                            <td>@Html.DisplayFor(modelItem => item.Type)</td>


                            <td>@((item.MarksObtained / item.TotalMarks) * 100.0);</td>
                        </tr>
                    }


